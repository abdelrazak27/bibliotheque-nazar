{% extends 'base.html.twig' %}

{% block title %}NAZAR Library - Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Inscrivez-vous</h1>

        {{ form_errors(registrationForm) }}
    
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse mail'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions'
            }) }}
            <button type="submit" class="button button-secondary button-rounded-square">S'inscrire</button>
            <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}